<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">
	<Resource 	name="jdbc/prajur" 
				auth="Container" 
				type="javax.sql.DataSource"               
				maxActive="10" 
				maxIdle="2" 
				maxWait="5000"               
				username="postgres"
				password="admin" 
				driverClassName="org.postgresql.Driver"               
				url="jdbc:postgresql://localhost/prajur?autoReconnect=true"/>				
</Context>